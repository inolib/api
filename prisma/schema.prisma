generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider     = "mysql"
  url          = env("PRISMA_URL")
  relationMode = "prisma"
}

model ContactCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  requests ContactRequest[]
}

model ContactRequest {
  id          String   @id @default(cuid())
  categoryId  String
  companyName String
  firstName   String
  lastName    String
  email       String
  phone       String
  message     String   @db.Text
  createdAt   DateTime @default(now())

  category ContactCategory @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
}

model Customer {
  id                String   @id @default(cuid())
  firsName          String
  lastName          String
  organization      String
  organizationTitle String
  email             String
  tel               String
  createdAt         DateTime @default(now())

  payments Payment[]
}

model Payment {
  id         String   @id @default(cuid())
  customerId String
  productId  String
  quantity   Int
  statusId   String
  createdAt  DateTime @default(now())

  customer Customer      @relation(fields: [customerId], references: [id])
  product  Product       @relation(fields: [productId], references: [id])
  status   PaymentStatus @relation(fields: [statusId], references: [id])

  @@index([customerId])
  @@index([productId])
  @@index([statusId])
}

model PaymentStatus {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  payments Payment[]
}

model Product {
  id         String   @id @default(cuid())
  categoryId String
  name       String   @unique
  price      Float
  currency   String
  createdAt  DateTime @default(now())

  category ProductCategory @relation(fields: [categoryId], references: [id])
  payments Payment[]

  @@index([categoryId])
}

model ProductCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  products Product[]
}
