generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model ContactCategory {
  id       String           @id @default(cuid())
  name     String           @unique
  requests ContactRequest[]
}

model ContactRequest {
  id          String          @id @default(cuid())
  categoryId  String
  category    ContactCategory @relation(fields: [categoryId], references: [id])
  companyName String
  firstName   String
  lastName    String
  email       String
  phone       String
  message     String          @db.Text
  createdAt   DateTime        @default(now())

  @@index([categoryId])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
}

model ArticleCategory {
  id       String    @id @default(cuid())
  name     String    @unique
  requests Article[]
}

model Article {
  id        String          @id @default(cuid())
  articleId String
  title     String
  image     String
  content   String
  date      DateTime        @default(now())
  category  ArticleCategory @relation(fields: [articleId], references: [id])

  @@index([articleId])
}

model User {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  email     String
  phone     String?
  password  String?
}
