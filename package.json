{
  "name": "@inolib/api",
  "version": "0.0.0",
  "private": true,
  "description": "INOLIBâ€™s GraphQL API",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:types && pnpm run build:api",
    "build:api": "vite build",
    "build:types": "pnpm run build:types.gql && pnpm run build:types.prisma",
    "build:types.gql": "vite-node ./src/scripts/build/types.gql/pre.ts && graphql-codegen",
    "build:types.prisma": "prisma generate --schema ./src/prisma/schema.prisma",
    "db:push": "prisma db push --schema ./src/prisma/schema.prisma",
    "db:seed": "vite-node ./src/prisma/seed.ts",
    "db:studio": "prisma studio --browser none --schema ./src/prisma/schema.prisma",
    "email:dev": "email dev --dir ./src/emails --port 4444",
    "format": "pnpm run format:prettier && pnpm run format:jsxattribute-sort && pnpm run format:packagejson && pnpm run format:prisma && pnpm run format:sort-imports",
    "format:jsxattribute-sort": "prettier --config ./.config/prettier/jsxattribute-sort/prettier.config.js --write ./**/*.tsx",
    "format:packagejson": "prettier --config ./.config/prettier/packagejson/prettier.config.js --write ./package.json",
    "format:prettier": "prettier --write .",
    "format:prisma": "prettier --config ./.config/prettier/prisma/prettier.config.js --write ./**/*.prisma",
    "format:sort-imports": "prettier --config ./.config/prettier/sort-imports/prettier.config.js --write ./**/*.js ./**/*.ts",
    "lint": "pnpm run lint:eslint && pnpm run lint:tsc",
    "lint:eslint": "eslint --ext .cjs,.js,.ts .",
    "lint:tsc": "tsc",
    "serve:dev": "pnpm run build && dotenv -- vercel dev --listen 4000",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@envelop/graphql-modules": "^5.0.3",
    "@prisma/client": "^5.4.1",
    "@react-email/components": "^0.0.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-modules": "^2.2.0",
    "graphql-scalars": "^1.22.2",
    "graphql-yoga": "^4.0.5",
    "libphonenumber-js": "^1.10.47",
    "postmark": "^3.0.20",
    "react": "^18.2.0",
    "react-email": "^1.9.5",
    "stripe": "^13.9.0",
    "valibot": "^0.19.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/graphql-modules-preset": "^4.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@rollup/plugin-graphql": "^2.0.4",
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.3",
    "@types/nodemailer": "^6.4.11",
    "@types/react": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vercel/node": "^3.0.7",
    "@vitest/coverage-v8": "^0.34.6",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.10",
    "graphql-config": "^5.0.3",
    "prettier": "^3.0.3",
    "prettier-plugin-jsxattribute-sort": "^1.0.1",
    "prettier-plugin-packagejson": "^2.4.6",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.4.1",
    "typescript": "^5.2.2",
    "vercel": "^32.4.1",
    "vite": "^4.4.11",
    "vite-node": "^0.34.6",
    "vite-plugin-node": "^3.0.2",
    "vitest": "^0.34.6"
  }
}
